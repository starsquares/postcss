{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "rootDir": "./src",
    "baseUrl": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "exclude": [
    "dist",
    "postcss",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "node_modules"
  ],
  "include": ["./src/**/*"]
}
